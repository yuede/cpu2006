# valgrind --tool=lackey --log-file=$LOGDIR/pipe --trace-mem=yes --trace-superblocks=yes $DIR/$BIN $@  
# # | split -a 4 -b 512M - $LOGDIR/log
source /home/toe/cpu2006/core.sh
